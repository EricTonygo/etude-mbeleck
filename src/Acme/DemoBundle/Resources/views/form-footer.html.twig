<div class="row contact-wrap"> 
    <div class="status alert alert-success" style="display: none"></div>
    <form id="main-contact-form" class="contact-form" name="contact-form" {{ form_enctype(form) }}>
        {{form_widget(form._token)}}
        <div class="col-sm-5 col-sm-offset-1">
            <div class="form-group">
                {{ form_label(form.nom, "Nom *") }}
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'required':'required'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, "Email *") }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required':'required'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.telephone, "Telephone") }}
                {{ form_errors(form.telephone) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>                      
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                {{ form_label(form.compagnie, "Nom compagnie") }}
                {{ form_errors(form.compagnie) }}
                {{ form_widget(form.compagnie, {'attr': {'class': 'form-control'}}) }}
            </div>  
            <div class="form-group">
                {{ form_label(form.objet, "Objet") }}
                {{ form_errors(form.objet) }}
                {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.message, "Message *") }}
                {{ form_errors(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control','required':'required'}}) }}
            </div>                        
            <div class="form-group">
                <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">Envoyer Message</button>
            </div>
        </div>
    </form> 
</div><!--/.row-->
